xsi:noNamespaceSchemaLocation="lightning-xml-schema.xsd">

  <container name="PCA" type="host">
    <interface name="eth1" enable_ipv6="yes" link_local_ipv6="no"/>
  </container>
  
  <container name="PCB" type="host">
    <interface name="eth1" enable_ipv6="yes" link_local_ipv6="no"/>
  </container>
  
  <container name="RA" type="router">
    <interface name="eth0.0" enable_ipv6="yes">
      <default_ip>192.168.0.1/24</default_ip>
    </interface>
    <interface name="eth0.1" enable_ipv6="yes" link_local_ipv6="no">
      <default_ip>192.168.1.1/24</default_ip>
    </interface>
    <interface name="eth0.2" enable_ipv6="yes" link_local_ipv6="no">
      <default_ip>192.168.2.1/24</default_ip>
    </interface>
    <interface name="eth0.3" enable_ipv6="yes" link_local_ipv6="no">
      <default_ip>192.168.3.1/24</default_ip>
    </interface>
    <interface name="eth0.4" enable_ipv6="yes" link_local_ipv6="no">
      <default_ip>192.168.4.1/24</default_ip>
    </interface>
    <interface name="wlan0" enable_ipv6="yes" link_local_ipv6="no">
      <default_ip>192.168.5.1/24</default_ip>
    </interface>
  </container>
  
  <container name="RB" type="router">
    <interface name="eth0.0" enable_ipv6="yes">
      <default_ip>192.168.0.1/24</default_ip>
    </interface>
    <interface name="eth0.1" enable_ipv6="yes" link_local_ipv6="no">
      <default_ip>192.168.1.1/24</default_ip>
    </interface>
    <interface name="eth0.2" enable_ipv6="yes" link_local_ipv6="no">
      <default_ip>192.168.2.1/24</default_ip>
    </interface>
    <interface name="eth0.3" enable_ipv6="yes" link_local_ipv6="no">
      <default_ip>192.168.3.1/24</default_ip>
    </interface>
    <interface name="eth0.4" enable_ipv6="yes" link_local_ipv6="no">
      <default_ip>192.168.4.1/24</default_ip>
    </interface>
    <interface name="wlan0" enable_ipv6="yes" link_local_ipv6="no">
      <default_ip>192.168.5.1/24</default_ip>
    </interface>
  </container>
  
  
  <network name="RedA" type="switch">
    
    <container name="PCA">
      <interface name="eth1">
        <ip>192.100.100.101/24</ip>
      </interface>
    </container>
    
    <container name="RA">
      <interface name="eth0.0"/>
    </container>
    
  </network>
  
  
  <network name="RedB" type="switch">
    
    <container name="PCB">
      <interface name="eth1">
        <ip>192.100.100.102/24</ip>
      </interface>
    </container>
    
    <container name="RB">
      <interface name="eth0.0"/>
    </container>
    
  </network>
  
  
  <network name="RedR" type="switch">
    
    <container name="RA">
      <interface name="eth0.1"/>
    </container>
    
    <container name="RB">
      <interface name="eth0.1"/>
    </container>
    
  </network>
    
</scenario>
